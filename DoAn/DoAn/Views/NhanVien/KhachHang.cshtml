            function DeleteRecord(id) {
                $.ajax({
                    url: '/NhanVien/DeleteKH',
                    type: 'POST',
                    data: { id: id }
                }).done(function (res) {
                    if (res.Success) {
                        $('#trow_' + id).remove();
                    }
                }).fail(function (err) {
                    console.log(err);
                });
            }            
            function ResetInput() {
                $('#fullname').val('');
                $('#email').val('');
                $('#phone_number').val('');
                $('#address').val('');
                $('#id').val(0);

            }
            function Validate() {
                var check = true;
                var name = $('#fullname').val();
                if (name === '') {
                    $('#fullname').next().html('Tên khách hàng được để trống!');
                    check = false;
                } else {
                    $('#fullname').next().html('');

                }

                var email = $('#email').val();
                var emailPattern = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

                if (email === '') {
                    $('#email').next().html('Email không được để trống!');
                    check = false;
                } else if (!emailPattern.test(email)) {
                    $('#email').next().html('Email không hợp lệ!');
                    check = false;
                } else {
                    $('#email').next().html('');

                }

                var phone_number = $('#phone_number').val();
                var phone_regex = /^\d{10}$/;

                if (phone_number === '') {
                    $('#phone_number').next().html('Số điện thoại không được để trống!');
                    check = false;
                } else if (!phone_regex.test(phone_number)) {
                    $('#phone_number').next().html('Số điện thoại phải có 10 số!');
                    check = false;
                } else {
                    $('#phone_number').next().html('');
                }

                var name = $('#address').val();
                if (name === '') {
                    $('#address').next().html('Địa chỉ không được để trống!');
                    check = false;
                } else {
                    $('#address').next().html('');

                }

                var name = $('#password').val();
                if (name === '') {
                    $('#password').next().html('Mật khẩu không được để trống!');
                    check = false;
                } else {
                    $('#password').next().html('');

                }

                return check;
            }

            function hideModal() {
                $("#modalCreate").removeClass("in");
                $(".modal-backdrop").remove();
                $('body').removeClass('modal-open');
                $('body').css('padding-right', '');
                $("#modalCreate").hide();
            }
