                function DeleteRecord(id) {
                    $.ajax({
                        url: '/NhanVien/DeleteSP',
                        type: 'POST',
                        data: { id: id }                   
                    }).done(function (res) {
                        if (res.Success) {
                            $('#trow_' + id).remove();
                        }
                    }).fail(function (err) {
