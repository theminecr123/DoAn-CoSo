                function GetDataById(id) {
                    $.ajax({
                        url: '/NhanVien/GetByIdSP',
                        type: 'GET',
                        data: { id: id },
                        success: function (res) {
                            if (res.data != null) {
                                $('#category').val(res.data.DM_id);
