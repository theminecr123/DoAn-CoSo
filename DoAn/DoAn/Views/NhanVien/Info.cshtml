        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .changepass {
        background-color: #4CAF50;
        display: inline-block;
        padding: 10px 20px;
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .column {
        float: right;
        width: 50%;
        padding-left: 100px;
        font-size: 25px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

