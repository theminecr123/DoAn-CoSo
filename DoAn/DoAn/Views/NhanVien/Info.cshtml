@model DoAn.Models.NhanVien


@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h2>Info</h2>


<table class="table">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>

        <th>
            Chức vụ
        </th>
        <th></th>

    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.fullname)
        </td>
        <td>
            @Html.DisplayFor(model => model.email)
        </td>
        <td>
            @Html.DisplayFor(model => model.phone_number)
        </td>
        <td>
            @Html.DisplayFor(model => model.address)
        </td>
        <td>
            @if (Model.role_id == 1)
            {
                <p>ADMIN</p>
            }
            else
            {
                <p>Nhân Viên</p>
            }


        </td>

    </tr>


</table>





<a href="@Url.Action("changePassword", new { id = Model.id })" class="change-password-link">
    <span class="password-icon"></span>
    Đổi mật khẩu
</a>
<style>

    .edit {
        background-color: #0094ff;
        display: inline-block;
        padding: 10px 20px;
        color: white;
        text-align: center;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .change-password-link {
        background-color: #3cd31a;
        border: none;
        color: #ffffff;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        margin: 4px 2px;
        cursor: pointer;
        font-family: 'Montserrat', sans-serif;
        letter-spacing: 2px;
        border-radius: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        position: relative;
        transition: all 0.3s ease;
    }

        .changepass:after {
            content: "";
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background-color: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            opacity: 0;
            transform: translate(-50%, -50%);
            transition: all 0.5s ease;
        }

        .changepass:hover:after {
            width: 210px;
            height: 200px;
            opacity: 1;
        }

        .changepass:focus {
            outline: none;
        }

        .changepass:active {
            transform: translateY(2px);
            box-shadow: none;
        }


    .column {
        float: right;
        width: 50%;
        padding-left: 100px;
        font-size: 25px;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

