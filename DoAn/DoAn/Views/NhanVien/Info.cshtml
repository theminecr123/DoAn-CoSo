@model DoAn.Models.NhanVien


@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h2>Info</h2>


<table class="table">
    <tr>
        <th>
            Họ và tên
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Địa chỉ
        </th>

        <th>
            Chức vụ
        </th>
        <th></th>
        
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.fullname)
        </td>
        <td>
            @Html.DisplayFor(model => model.email)
        </td>
        <td>
            @Html.DisplayFor(model => model.phone_number)
        </td>
        <td>
            @Html.DisplayFor(model => model.address)
        </td>
        <td>
            @if(Model.role_id == 1)
            {
                <p>ADMIN</p>
            }
            else
            {
                <p>Nhân Viên</p>
            }

            
        </td>

    </tr>


</table>





<p class="changepass">
    @Html.ActionLink("Đổi mật khẩu", "changePassword", new { id = Model.id })

</p>
<style>

    .edit {
        background-color: #0094ff;
        display: inline-block;
        padding: 10px 20px;
